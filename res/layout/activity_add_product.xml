<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AddProductActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:drawableStart="@drawable/vc_back_24"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/backBtn"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:id="@+id/productImage"
        android:layout_margin="8dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vc_add_48"
        android:id="@+id/addImageBtn"
        android:layout_gravity="center"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Name"
        android:background="@drawable/edittext_background2"
        android:id="@+id/productNameEdit"
        android:layout_marginHorizontal="16dp"
        android:padding="8dp"
        android:layout_marginVertical="8dp"
        />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Price"
            android:background="@drawable/edittext_background2"
            android:id="@+id/productPriceEdit"
            android:layout_marginHorizontal="16dp"
            android:padding="8dp"
            android:layout_marginVertical="8dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Category"
            android:background="@drawable/edittext_background2"
            android:id="@+id/productCategoryEdit"
            android:layout_marginHorizontal="16dp"
            android:padding="8dp"
            android:layout_marginVertical="8dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Stock"
            android:background="@drawable/edittext_background2"
            android:id="@+id/productStockEdit"
            android:layout_marginHorizontal="16dp"
            android:padding="8dp"
            android:layout_marginVertical="8dp"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/productHighlightRadioGroup"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:padding="8dp"
            android:gravity="center"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highlight"
                android:id="@+id/productHighlightRadioButton"
                android:layout_marginHorizontal="8dp"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Highlight"
                android:id="@+id/productNotHighlightRadioButton"
                android:layout_marginHorizontal="8dp"
                />

        </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Product"
            android:id="@+id/addProductBtn"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            />

    </LinearLayout>

</ScrollView>